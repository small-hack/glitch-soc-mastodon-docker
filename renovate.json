{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":disableDependencyDashboard"
  ],
  "packageRules": [
    { 
      "matchManagers": ["github-actions"],
      "matchPackageNames": ["renovatebot/github-action"],
      "matchUpdateTypes": ["patch", "minor"],
      "automerge": true,
      "ignoreTests": true
    }
}
